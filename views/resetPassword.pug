extends layout 

block right-content 
    .user--form
        .container
            .card.blue-grey.lighten-5
                .card-content
                    form.col.s12(method="POST") 
                        h5.center-align Reset Password
                        .row
                            br
                            .input-field.col.s12
                                input#password(type="password" name="password" required) 
                                label(for="password") Password

                            .input-field.col.s12
                                input#confirm-password(type="password" name="confirm-password" required) 
                                label(for="confirm-password") Confirm Password

                        .row.action--btn
                            button.btn(type="submit" name="action") Reset Password